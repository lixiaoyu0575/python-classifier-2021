{
  "n_gpu": 1,
  "base_dir": "model_training",
  "lead_number": 3,
  "arch": {
    "type": "resnest",
    "args": {
      "layers": [
        2,
        2,
        1,
        3
      ],
      "bottleneck_width": 64,
      "stem_width": 16,
      "num_classes": 108,
      "kernel_size": 7
    }
  },
  "data_loader": {
    "batch_size": 128,
    "resample_Fs": 300,
    "window_size":3000,
    "normalization": false,
    "augmentation": {
    "method": null,
    "prob": 0.8
  }
  },

  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.003,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": {
    "type": "bce_with_logits_loss"
  },
  "metrics": [
    "accuracy",
    "f_measure",
    "macro_f_beta_measure",
    "macro_g_beta_measure",
    "macro_auroc",
    "macro_auprc",
    "challenge_metric"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 20,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 1,
    "monitor": "max val_challenge_metric",
    "early_stop": 10,
    "only_scored": true
  }
}
